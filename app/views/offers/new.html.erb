<div class="new_offer_container">
  <div class="new_offer_header">
    <h1>Create offer</h1>
    <p>Please, fill the next form to publish an offer</p>
  </div>
  <div>
    <%= form_for @offer do |f| %>
      <div class="form_container">
        <div class="form__component">
          <%= f.label :title, class: 'form__label'%>
          <%= f.text_field :title, class: 'form__input' %>
        </div>

        <div class="form__component description__form">
          <%= f.label :description, class: 'form__label' %>
          <%= f.rich_text_area :description %>
        </div>

        <div class="three__component">
          <div class="form__component">
            <%= f.label :earning, class: 'form__label' %>
            <%= f.number_field :earning %>
          </div>

          <div class="form__component">
            <%= f.label :offer_type_id, class: 'form__label' %>
            <%= f.select(:offer_type_id, options_from_collection_for_select(OfferType.all, :id, :name)) %>
          </div>

          <div class="form__component">
            <%= f.label :tag_id, class: 'form__label' %>
            <%= f.select(:tag_id, options_from_collection_for_select(Tag.all, :id, :name)) %>
          </div>
        </div>

        <div class="form__component previous__form">
          <%= f.label :previous_conversation, class: 'form__label' %>
          <%= f.check_box :previous_conversation, class: 'checkbox' %>
        </div>

        <%= f.button :submit, class: 'form__component' %>
      </div>
    <% end %>
  </div>
</div>
